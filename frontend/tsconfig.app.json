{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@app/*": ["./src/app/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@auth/*": ["./src/app/auth/*"],
      "@dashboard/*": ["./src/app/dashboard/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
